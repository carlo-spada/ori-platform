{
  "mcpServers": {
    "stripe": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-stripe"],
      "env": {
        "STRIPE_API_KEY": "${STRIPE_API_KEY}",
        "STRIPE_WEBHOOK_SECRET": "${STRIPE_WEBHOOK_SECRET}"
      },
      "disabled": false,
      "description": "Stripe payment processing and webhook simulation for testing"
    },
    "resend": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-resend"],
      "env": {
        "RESEND_API_KEY": "${RESEND_API_KEY}"
      },
      "disabled": false,
      "description": "Resend email service for transactional and marketing emails"
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}",
        "READ_ONLY": "false"
      },
      "disabled": false,
      "description": "PostgreSQL database access for schema inspection, querying, and RLS testing"
    },
    "notion": {
      "command": "npx",
      "args": ["-y", "@notionhq/notion-mcp-server"],
      "env": {
        "NOTION_TOKEN": "${NOTION_TOKEN}"
      },
      "disabled": false,
      "description": "Notion workspace integration for documentation sync"
    }
  }
}
