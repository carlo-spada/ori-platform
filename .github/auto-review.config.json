{
  "enabled": true,
  "requireManualReview": {
    "largeChanges": {
      "enabled": true,
      "threshold": 500,
      "description": "PRs with more than 500 lines changed require manual review"
    },
    "criticalFiles": {
      "enabled": true,
      "patterns": [
        ".github/workflows/**",
        "AGENTS.md",
        "package.json",
        "pnpm-lock.yaml",
        "tsconfig.json",
        "next.config.ts"
      ],
      "description": "Changes to critical configuration files require manual review"
    },
    "securitySensitive": {
      "enabled": true,
      "patterns": [
        "**/*.env*",
        "**/secrets/**",
        "**/auth/**",
        "**/security/**"
      ],
      "description": "Security-sensitive files always require manual review"
    }
  },
  "autoMerge": {
    "enabled": true,
    "method": "squash",
    "requireApproval": false,
    "deleteSourceBranch": false
  },
  "notifications": {
    "postReviewComment": true,
    "postMergeComment": true,
    "notifyOnFailure": true
  },
  "checks": {
    "lint": {
      "required": true,
      "command": "pnpm lint"
    },
    "build": {
      "required": true,
      "command": "pnpm build"
    },
    "test": {
      "required": false,
      "command": "pnpm test"
    }
  }
}
